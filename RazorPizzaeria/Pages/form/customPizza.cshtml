@page
@model RazorPizzaeria.Pages.form.customPizzaModel
@{
}
 <div class="text-center container">
    <h1>  Create your own Pizza !</h1>
    <form  method="post" 
    class="mx-auto mt-5 mb-5 px-5 pt-5 pd-5 bg-light rounded-5 col-4" >
        <input type="text" asp-for="pizza.pizzaname" placeholder="give your pizza name " />
        <br />
        <input type="checkbox" asp-for="pizza.tomatosauce"  placeholder="tomatosauce" /> tomatosauce
        <br/>
        <input type="checkbox" asp-for="pizza.cheese"  placeholder="cheese" /> cheese
        <br/>
        <input type="checkbox" asp-for="pizza.hum" placeholder="hum" /> hum
        <br/>
        <input type="checkbox" asp-for="pizza.beef" placeholder="beef" /> Beef
        <br/>
        <input type="checkbox" asp-for="pizza.peperoni" placeholder="peperoni" /> peperoni
        <br/>
        <input type="checkbox" asp-for="pizza.mushroom"   placeholder="Mushroom" /> Mushroom
        <br/>
        <input type="checkbox" asp-for="pizza.tuna" placeholder="Tuna" /> Tuna
        <br/>
        <input type="checkbox" asp-for="pizza.pineapple" placeholder="pineapple" /> Pineapple
         <br/>
        
<button class="btn btn-primary mt-1 " type="submit"> Make my Pizza</button>
    </form>
 </div>
